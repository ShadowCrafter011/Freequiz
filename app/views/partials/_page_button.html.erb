<% active = page.to_s == params[:page] || (page == 1 && params[:page].nil?) ? "text-white hover:text-white bg-blue-600" : "text-black hover:text-white hover:bg-blue-600 dark:text-white" %>
<%= link_to page, url_for(params.merge(page: page)), class: "py-2 px-4 first:rounded-s last:rounded-e #{active}" %>