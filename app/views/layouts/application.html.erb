<!DOCTYPE html>
<html lang=<%= I18n.locale %>>
  <head>
    <title><%= @title || t("layouts.application.title") %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="description" content="<%= t("layouts.application.description") %>">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= favicon_link_tag "freequiz/freequiz_logo.png" %>
    <%= stylesheet_link_tag "tailwind", "inter-font", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    <script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-1788164139037794" crossorigin="anonymous"></script>
    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-2HQBXFVC0D"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());

      gtag('config', 'G-2HQBXFVC0D');
    </script>
  </head>
  <body class="<%= "dark" if @user.nil? || @user.setting.dark_mode %> overflow-x-hidden dark:bg-gray-900 dark:text-white">
    <%= render partial: "layouts/notification" %>
    <%= render partial: "layouts/bug_report" %>
    <%= render partial: "layouts/navbar" %>
    <div class="mx-2 mt-2 <%= "sm:container" unless @no_container %>" style="min-height: 90vh;">
      <%= yield %>
    </div>
    <%= render partial: "layouts/footer" %>
  </body>
</html>
