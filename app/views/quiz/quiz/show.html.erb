<% if @user == @quiz.user %>
    <%= content_for :js, "delete_toast" %>

    <style>
        @media (min-width: 900px) {
            #deleteToast {
                flex: 0 0 35vw;
            }
        }

        @media (max-width: 900px) {
            #deleteToast {
                flex: 0 0 70vw;
            }
        }
    </style>

    <div class="position-fixed w-100 d-flex justify-content-center pe-none sticky-top" style="margin-top: 20px;" z-index="2000">
        <div id="deleteToast" class="toast bg-white" role="alert" aria-live="assertive" aria-atomic="true" data-bs-autohide="false" style="widht: 50vw;">
            <div class="toast-body fs-4">
                <%= tp("sure_to_delete") %>
                <div class="mt-2 pt-2 border-top d-flex justify-content-around">
                    <%= link_to tp("delete"), quiz_delete_path(destroy_token: @token), class: "btn btn-danger btn-lg", data: {
                        turbo_method: :delete
                    } %>
                    <button class="btn btn-secondary btn-lg" type="button" data-bs-dismiss="toast"><%= tp("cancel") %></button>
                </div>
            </div>
        </div>
    </div>
<% end %>

<div class="container">
    <div class="text-center my-4">
        <h1><%= @quiz.title %></h1>
        <h4><%= @quiz.description %></h4>
        
        <% if @user == @quiz.user %>
            <p>
                <div class="text-center">
                    <%= link_to tp("edit"), quiz_edit_path(@quiz), class: "btn btn-primary" %>
                    <button class="btn btn-danger" type="button" id="deleteToastBtn"><%= tp("delete") %></button>
                </div>
            </p>
        <% end %>

        <ul id="translations" class="list-group list-group-horizontal fs-5">
            <li class="list-group-item w-50 p-0">
                <ul class="list-group list-group-flush">
                    <% for translation in @quiz.data do %>
                        <li class="list-group-item"><%= translation[:w] %></li>
                    <% end %>
                </ul>
            </li>

            <li class="list-group-item w-50 p-0">
                <ul class="list-group list-group-flush">
                    <% for translation in @quiz.data do %>
                        <li class="list-group-item"><%= translation[:t] %></li>
                    <% end %>
                </ul>
            </li>
        </ul>
    </div>
</div>
