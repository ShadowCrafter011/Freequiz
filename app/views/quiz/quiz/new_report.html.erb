<h1 class="mb-5"><%= t ".title", title: @quiz.title %></h1>

<%= form_with model: @quiz_report, url: quiz_report_path do |form| %>
    <p class="flex justify-center">
        <%= form.text_area :description, placeholder: t(".description_placeholder"), class: "text-field  sm:m-px rounded ring-2 ring-gray-300 dark:ring-gray-700 focus:ring-2 focus:ring-teal-600 min-h-10 max-w-xl" %>
    </p>
    
    <div class="flex justify-center mt-5">
        <div>
            <p>
                <h3 class="text-start"><%= t ".quiz_is" %></h3>
                <ul>
                    <% QuizReport::KEYS.each do |key| %>
                        <li class="mt-2 flex flex-row align-center gap-2">
                            <%= form.check_box key, class: "border-gray-300 dark:border-gray-700 focus:border-teal-700 text-teal-700 focus:outline-none focus:ring-transparent rounded focus:ring-offset-0 dark:bg-gray-900  h-6 w-6" %>
                            <%= form.label key, t(".#{key.to_s}") %>
                        </li>
                    <% end %>
                </ul>
            </p>

            <p class="mt-5 w-full">
                <%= form.submit t(".report"), class: "form-submit ms-0 w-full h-10 text-xl" %>
            </p>
        </div>
    </div>
<% end %>
