<style>
    .row .account-item {
        background-color: #b5d0ff;
        border: 5px solid #b5d0ff;
        border-radius: 10px;
        height: 100%;
    }

    .account-item-container {
        height: 100%;
        min-height: 300px;
    }

    .item-row {
        margin-top: 5px;
    }
</style>

<div class="container-fluid mt-1">
    <div class="d-flex w-100 justify-content-center">
        <h1>Ihr Freequiz Konto</h1>
    </div>
    <div class="row text-center">
        <div class="col-xl-4 item-row">
            <div class="account-item-container ms-2">
                <div class="account-item text-start fs-4">
                    <h3>Kontoinformationen</h3>

                    <strong>Daten</strong>
                    <% data = {
                        "Benutzername": @user.username,
                        "E-mail Adresse": @user.email,
                        "Nicht bestätigte E-mail Adresse": @user.unconfirmed_email,
                        "E-mail Adresse bestätigt": @user.verified? ? "Ja" : "Nein",
                        "Rolle": t("roles.#{@user.role}")
                    } %>
                    <%= create_items data %>

                    <div class="w-100 text-center mt-1">
                        <%= link_to "Bearbeiten", user_edit_path, class: "btn btn-primary btn-lg", style: "width: 90%;" %>
                        <!-- TODO: Ask for confirmation and tell the user about the consequences of sending a new email -->
                        <% unless @user.verified? %><%= link_to "E-mail Adresse bestätigen", user_verification_send_path, class: "btn btn-primary btn-lg mt-2", style: "width: 90%;" %><% end %>
                    </div>
                    <br>

                    <strong>Logins</strong>
                    <% data = {
                        "Totale logins": @user.sign_in_count,
                        "Letzte login IP Adresse": @user.current_sign_in_ip,
                        "Letztes login am": @user.current_sign_in_at
                    } %>
                    <%= create_items data %>
                            
                </div>
            </div>
        </div>

        <div class="col-xl-4 item-row">
            <div class="account-item-container mx-1">
                <div class="account-item">
                    <h3>Quizzes</h3>
                </div>
            </div>
        </div>

        <div class="col-xl-4 item-row">
            <div class="account-item-container me-2">
                <div class="account-item">
                    <h3>Lerngruppen</h3>
                </div>
            </div>
        </div>
    </div>
</div>