<div class="d-flex justify-content-center w-100 my-4">
    <div class="text-center">
        <h1><%= tl "title" %></h1>
    </div>
</div>

<div class="form-group">
    <%= form_with url: user_edit_path, model: @user, method: :patch do |form| %>
        <div class="container-fluid">
            <div class="row d-flex justify-content-center">
                <div class="col-md-4">
                    <div>
                        <%= form.label :username, tg("username"), class: "fs-4" %>
                        <%= form.text_field :username, autocomplete: "username", class: "form-control" %>
                    </div>
                    <div>
                        <%= form.label :email, tg("emails"), class: "fs-4" %>
                        <%= form.text_field :email, autocomplete: "email", class: "form-control" %>
                    </div>
                    <div>
                        <%= form.label :password, tg("password"), class: "fs-4" %>
                        <%= form.password_field :password, class: "form-control", placeholder: tl("can_empty") %>
                    </div>
                    <div>
                        <%= form.label :password_confirmation, tl("password_repeat"), class: "fs-4" %>
                        <%= form.password_field :password_confirmation, class: "form-control", placeholder: tl("can_empty") %>
                    </div>
                    <div>
                        <%= form.label :old_password, tl("old_password"), class: "fs-4" %>
                        <%= form.password_field :old_password, class: "form-control", placeholder: tl("can_empty") %>
                    </div><br>
                    <div class="row">
                        <div class="col-6">
                            <%= form.submit value: tg("save"), class: "btn btn-lg btn-primary w-100" %>
                        </div>
                        <div class="col-6">
                            <%= link_to "Abbrechen", user_path, class: "btn btn-lg btn-secondary w-100" %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    <% end %>
</div>

