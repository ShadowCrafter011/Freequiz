<%= link_to quiz_show_path(quiz), id: quiz.id, class: "quiz-card", data: { title: quiz.title, translations: quiz.data.length, created: quiz.created_at.to_i, visibility: quiz.visibility } do %>
    <h3><%= quiz.title %></h3>
    <div class="row text-center">
        <div class="col-md-4 text-truncate">
            <strong><%= tp("description") %></strong>: <%= quiz.description %>
        </div>
        <div class="col-md-4">
            <strong><%= tp("translation_amount") %></strong>: <%= quiz.data.length %>
        </div>
        <div class="col-md-4">
            <strong><%= tp("visibility") %></strong>: <%= tg("visibilities", quiz.visibility) %>
        </div>
    </div>
<% end %>