<div class="flex flex-col items-center mt-3">       
    <% request_new = link_to tp("request_new"), user_verification_send_path %>
    <% if params[:expired].present? %>
        <h1><%= tp("expired") %></h1>
        <h3><%= request_new %></h3>
    <% elsif params[:invalid].present? %>
        <h1><%= tp("wrong") %></h1>
        <h3><%= request_new %></h3>
    <% else %>
        <h1><%= tp("success") %></h1>
        <h3><%= tp("can_leave") %></h3>
    <% end %>

    <%= image_tag "freequiz/freequiz_logo_big.png", class: "mt-3 h-96" %>
</div>