<h1><%= tp("reset_password") %></h1>
<h5><%= tp("not_forgotten") %> <%= link_to tg("login"), user_login_path %></h5>

<%= form_with url: user_password_reset_path do |form| %>
    <div class="text-field-container">
        <%= form.text_field :username, autofocus: true, autocomplete: false, placeholder: tp("username"), class: "text-field" %>
        <%= form.submit value: tp("reset"), class: "form-submit" %>
    </div>
<% end %>
