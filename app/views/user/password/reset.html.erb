<div class="d-flex justify-content-center w-100 my-4">
    <div class="text-center">
        <h1>Passwort zur√ºcksetzen</h1>
        <h4>Passwort doch nicht vergessen? <%= link_to "Login", user_login_path %></h4>
    </div>
</div>

<div class="form-group">
    <%= form_with url: user_password_reset_path do |form| %>
        <div class="container-fluid">
            <div class="row d-flex justify-content-center">
                <div class="col-md-4">
                    <div>
                        <%= form.label :username, "Benutzername oder E-mail", class: "fs-4" %>
                        <%= form.text_field :username, autofocus: true, autocomplete: "username", class: "form-control" %>
                    </div><br>
                    <div class="text-center">
                        <%= form.submit value: "E-mail schicken", class: "btn btn-lg btn-primary" %>
                    </div>
                </div>
            </div>
        </div>
    <% end %>
</div>
