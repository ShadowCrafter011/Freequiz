<div class="d-flex justify-content-center w-100 my-4">
    <div class="text-center">
        <h1><%= tp("set_new_password") %></h1>
    </div>
</div>

<div class="form-group">
    <%= form_with url: user_password_edit_path(password_reset_token: params[:password_reset_token]) do |form| %>
        <div class="container-fluid">
            <div class="row d-flex justify-content-center">
                <div class="col-md-4">
                    <div>
                        <%= form.label :password, tp("new_password"), class: "fs-4" %>
                        <%= form.password_field :password, autofocus: true, class: "form-control" %>
                    </div>
                    <div>
                        <%= form.label :password_confirmation, tp("repeat_password"), class: "fs-4" %>
                        <%= form.password_field :password_confirmation, class: "form-control" %>
                    </div><br>
                    <div class="text-center">
                        <%= form.submit value: tp("change_password"), class: "btn btn-lg btn-primary" %>
                    </div>
                </div>
            </div>
        </div>
    <% end %>
</div>
