<h1><%= tp("set_new_password") %></h1>

<%= form_with url: user_password_edit_path do |form| %>
    <div class="text-field-container">
        <%= form.password_field :password, autofocus: true, placeholder: tp("new_password"), class: "text-field" %>
    </div>
    <div class="text-field-container">
        <%= form.password_field :password_confirmation, placeholder: tp("repeat_password"), class: "text-field" %>
        <%= form.submit value: tp("change_password"), class: "form-submit" %>
    </div>
<% end %>
