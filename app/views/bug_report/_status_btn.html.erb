<%= form_with url: url, model: bug, method: :patch, class: "grow text-center transition-colors hover:bg-gray-100 first:rounded-s last:rounded-e dark:hover:bg-gray-800" do |form| %>
    <%= form.text_field :status, hidden: true, value: status %>
    <%= form.submit submit, class: "w-full font-bold p-2 cursor-pointer" %>
<% end %>