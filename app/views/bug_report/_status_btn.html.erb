<%= form_with url: bug_status_path(@bug), model: @bug, method: :patch, class: "grow text-center transition-colors hover:bg-gray-100 first:rounded-s last:rounded-e" do |form| %>
    <%= form.text_field :status, hidden: true, value: status %>
    <%= form.submit submit, class: "w-full font-bold p-2 cursor-pointer" %>
<% end %>