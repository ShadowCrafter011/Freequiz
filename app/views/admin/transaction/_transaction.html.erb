<a href="<%= admin_show_transaction_path(transaction) %>" class="rounded border border-gray-300 bg-gray-50 hover:bg-gray-100 px-2 py-1 flex flex-col items-start justify-center">
    <div class="w-full flex gap-2">
        <h4 class="<%= transaction.color %>"><%= transaction.amount.positive? ? "+" : "" %><%= transaction.amount %></h4>
        <h4 class="text-black truncate"><%= transaction.description %></h4>
    </div>
    <h6 class="text-black">Created by <%= transaction.user.present? ? transaction.user.username : "Deleted" %> <%= distance_of_time_in_words_to_now(transaction.created_at, locale: :en) %> ago</h6>
</a>