<h1>Create Transaction</h1>

<%= form_with model: @transaction, url: admin_new_transaction_path do |form| %>
    <div class="flex flex-col md:flex-row gap-2">
        <div class="border-b-2 border-teal-700">
            <%= form.number_field :amount, placeholder: "Amount", class: "text-field no-number-input-controls" %>
        </div>
        <div class="grow border-b-2 border-teal-700">
            <%= form.text_field :description, placeholder: "Describe the transaction", class: "text-field" %>
        </div>
        <%= form.submit "Save", class: "btn-success-sleek" %>
    </div>
<% end %>
