<%= content_for :js, "admin_destroy" %>

<div class="text-center">
    <h1>Are you sure you want to delete this account?</h1>
    <h4>After deletion the account cannot be recovered!</h4>
    <h4>Click all the three buttons to confirm</h4>
    <div><%= link_to "Cancel", admin_user_edit_path(@user.username), class: "btn btn-success btn-lg" %></div>
    <br>
    <div class="container">
        <div class="row">
            <% 3.times do %>
                <div class="col-4">
                    <%= render partial: "delete_button", locals: {user: @user, token: @token} %>
                </div>
            <% end %>
        </div>
    </div>
</div>