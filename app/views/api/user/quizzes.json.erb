{
    "success": true,
    "data": [
        <% @quizzes.each_with_index do |quiz, index| %>
        {
            "id": "<%= quiz.id %>",
            "title": "<%= quiz.title %>",
            "description": "<%= quiz.description %>",
            "visibility": "<%= quiz.visibility %>",
            "translations": <%= quiz.data.length %>,
            "from": {
                "id": "<%= quiz.from %>",
                <% from = Language.find(quiz.from) %>
                "name": "<%= from.name %>",
                "locale": "<%= from.locale %>"
            },
            "to": {
                "id": "<%= quiz.to %>",
                <% to = Language.find(quiz.to) %>
                "name": "<%= to.name %>",
                "locale": "<%= to.locale %>"
            }
        }<%= "," if index < @quizzes.length - 1 %>
        <% end %>
    ]
}