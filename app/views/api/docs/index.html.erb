<style>
  .sticky-sidebar {
    position: sticky;
    top: 75px;
    height: 100%;
  }

  .link_list {
    list-style-type: none;
  }
</style>

<div class="container-fluid mt-2">
  <div class="row">
    <div class="col-3 sticky-sidebar">
        
      <div class="list-group">
        <%= link_to "Index", api_docs_path, class: "list-group-item list-group-item-action" %>

        <%= link_to "Authentication", api_docs_authentication_path, class: "list-group-item list-group-item-action" %>

        <div class="list-group-item list-group-item-action" role="button" data-bs-target="#users" data-bs-toggle="collapse">
          <div class="dropdown-toggle">Users</div>
          <div id="users" class="collapse list-group list-group-flush mt-2">

            <% links = [  ["create", "create"],
                          ["delete", "delete_token"],
                          ["delete", "delete"],
                          ["login", "login"],
                          ["refresh", "refresh"],
                          ["data", "data"],
                          ["update", "update"],
                          ["settings", "settings"]
                        ] %>

            <% links.each do |link_name, anchor| %>
              <%= link(method(:api_docs_users_path), link_name, anchor) %>
            <% end %>

          </div>
        </div>
      </div>        

    </div>
    <div class="col-9">
      <!-- content -->
      Content whoooo!
    </div>
  </div>
</div>

<script>
  for (let item of document.getElementsByClassName("link")) {
    item.addEventListener("click", e => {
      window.location.href = item.getAttribute("href");
    });
  }
</script>